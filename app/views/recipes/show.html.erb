<div class="containershow">
<div class="row my-5">
<div class="col-lg-6">
<img src="<%= @recipe.image %>" class="image-recipe" alt="photo">
</div>
<div class="col-lg-6 mt-5">
<h1><%= @recipe.title %></h1>
<p class="mt-5">
<strong>Recette:</strong>
<%= @recipe.description %>
</p>
</div>
</div>
</div>





<p style="color: green"><%= notice %></p>




<div>
  <%= link_to "Edit this recipe", edit_recipe_path(@recipe) %> |
  <%= link_to "Back to recipes", recipes_path %>

  <%= button_to "Destroy this recipe", @recipe, method: :delete , class: 'btn btn-outline-dark rounded-pill ' %>
</div>
